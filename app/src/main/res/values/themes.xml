<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EjercicioPrueba" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BoardgamesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/bgapp_background_app</item>
    </style>
    <style name="BoardgamesSubtitle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/bgapp_subtitle_text</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">32dp</item>
    </style>


    <style name="TextViewEtiqueta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">50dp</item>
            <item name="android:fontFamily">sans-serif-black</item>
            <item name="android:textSize">24sp</item>
            <item name="android:background">#E0BBE4</item>
            <item name="android:textColor">#800000</item>
            <item name="android:gravity">center</item>
            <item name="android:padding">10dp</item>
    </style>


    <style name="Theme.PruebaExamen_textView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Centrar el texto horizontal y verticalmente -->
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>

    </style>


    <style name="Theme.EjercicioPrueba" parent="Base.Theme.EjercicioPrueba" />


</resources>